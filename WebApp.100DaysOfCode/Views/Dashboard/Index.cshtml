@model List<WebApp._100DaysOfCode.Models.Commit>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="bg-white rounded-2xl shadow p-4">
    <div class="flex items-center justify-between">
        <div>
            <p class="text-xl font-semibold">Progresso</p>
            <p class="text-sm text-gray-500">@ViewData["DaysOn"] de 100 dias concluídos</p>
        </div>
        <span class="text-orange-500 text-3xl">🔥</span>
    </div>
    <div class="w-full h-4 bg-gray-200 rounded mt-4 overflow-hidden">
        <div class="bg-orange-500 h-4 rounded" style="width: @ViewData["DaysOn"]%"></div>
    </div>
</div>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <a asp-controller="Day" asp-action="DayRegister" class="bg-white rounded-xl shadow p-4 hover:shadow-md cursor-pointer">
        <div class="text-blue-500 text-xl mb-2">📅</div>
        <p class="font-medium">Registrar novo dia</p>
        <p class="text-sm text-gray-500">Adicione o que estudou hoje</p>
    </a>
    <a asp-controller="Day" asp-action="DayHistory" class="bg-white rounded-xl shadow p-4 hover:shadow-md cursor-pointer">
        <div class="text-green-500 text-xl mb-2">📝</div>
        <p class="font-medium">Ver histórico</p>
        <p class="text-sm text-gray-500">Veja os dias já registrados</p>
    </a>
</div>
@if (Model.Count > 0)
{
    <div class="bg-white rounded-2xl shadow p-4">
        <h2 class="text-xl font-semibold mb-4">Últimos Commits no GitHub</h2>
        <ul class="space-y-3">
            @foreach (var item in Model)
            {
                <li class="border-l-4 border-yellow-500 pl-3">
                    <p class="text-sm font-medium text-gray-800">@item.Title</p>
                    <p class="text-xs text-gray-500">@item.Data · @item.RepositoryName: <span class="font-mono">100-days-code</span></p>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="text-center text-sm">
        <p class="text-orange-500 hover:underline">Sem commits por hora!</p>
    </div>
}